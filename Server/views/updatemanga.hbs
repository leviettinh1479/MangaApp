                    <input onchange="displayImg()" style="margin-top: 10;" value="{{mangaData.image}}" type="text" id="imageUrl" name="imageUrl" class="form-control" placeholder="Enter image URL">
                    <input onchange="displayImg()" style="margin-top: 10;"  type="file" id="image" name="image" class="form-control" accept="image/*" multiple>              
