  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var status = "{{mangaData.status}}";
      // Lấy giá trị của status từ dữ liệu của bạn // Lấy ra các option trong
      thẻ select var options = document.getElementById('status').options; for
        (var i = 0; i < options.length; i++) {
          if (options[i].value === status) {
            options[i].selected = true; // Nếu value của option trùng với status thì
      set selected = true break; // Đã tìm thấy và set selected, thoát vòng lặp
          }
      }
    });
  </script>
<script>
  document.addEventListener('DOMContentLoaded', function() {

    fetch('/api/genre/getall') 
      .then(response => response.json())
      .then(data => {
        const genreSelect = document.getElementById('genre');
        
        data.forEach(genre => {
          const option = document.createElement('option');
          option.value = genre._id; 
          option.text = genre.name; 
          genreSelect.add(option);
        });
      })
      .catch(error => console.error('Error:', error));
  });
</script>
<script>
const displayImg = () => {
  var imageUrlInput = document.getElementById('imageUrl');
  var fileInput = document.getElementById('image');
  var imageDisplay = document.getElementById('listImage-display');
  var imgUrlInput = document.getElementById('imgUrl');

  if (imageUrlInput.value) {
    imageDisplay.src = imageUrlInput.value;
    imgUrlInput.value = imageUrlInput.value;
  } else if (fileInput.files && fileInput.files[0]) {
    var reader = new FileReader();
    reader.onload = function (e) {
      imageDisplay.src = e.target.result;
      imgUrlInput.value = e.target.result;
    }
    reader.readAsDataURL(fileInput.files[0]);
  }
}

</script> 
