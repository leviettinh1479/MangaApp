            <div class="card">
              <div class="card-body">
                <form action="/api/manga/addmanga" method="POST" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="name" class="form-control">

                  </div>
                  <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" id="author" name="author" class="form-control">
                  </div>
                  <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input onchange="displayImg()" style="margin-top: 10;" type="text" id="imageUrl" name="imageUrl" class="form-control" placeholder="Enter image URL">
                    <input onchange="displayImg()" style="margin-top: 10;" type="file" id="image" name="image" class="form-control" accept="image/*" multiple>              
                  </div>
                  <image src="{{this.image}}" id="listImage-display"  style="width: 100;height: 100;"></image>
                  <input type="hidden" id="imgUrl" value="image">
                  <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select id="status" name="status" class="form-select">
                      <option value="Đang tiến hành">Đang tiến hành</option>
                      <option value="Đã hoàn thành">Đã hoàn thành</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="genre" class="form-label">Thể loại</label>

                    <select id="genre" name="genre" class="form-select" multiple>
                      {{#each genreData}}
